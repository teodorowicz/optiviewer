<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		id          = "optiviewer"
        version     = "1.1.0" >

        <name>OPTIviewer</name>
        <description>Aplikacja wspomagajaca system elektronicznej ewidencji OPTIEST</description>
        <author href="" email="">Micha≈Ç T-W</author>
	    
        <platform name="android">
            <icon src="icon-60@3x.png" width="180" height="180" />
        </platform>
        
        <icon src="icon.png" />

        <plugin name="cordova-plugin-whitelist" version="1" />
        <allow-navigation href="*" />
        <allow-intent href="http://*/*" />
        <allow-intent href="https://*/*" />
        <access origin="*" />

	    <plugin name="cordova-plugin-device" spec="~1.1.4" />
	    <plugin name="cordova-plugin-dialogs" spec="~1.3.1" />
        
        <preference name="android-build-tool" value="gradle" />
        <plugin name="phonegap-plugin-barcodescanner" spec="~6.0.6" />  

    </widget>
